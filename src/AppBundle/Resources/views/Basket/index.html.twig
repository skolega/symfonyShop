{% extends "::base.html.twig" %}

{% block title %}AppBundle:Basket:index{% endblock %}

{% block body %}
    <h1>Koszyk</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>nazwa</th>
                <th>cena</th>
                <th>opis</th>
                <th>ilość</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for product in products_in_basket %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.desc }}</td>
                    <td style="width:250px">
                        <div class="input-group">
                            <input type="text"  class="form-control" value="{{ product.quantity }}">
                            <span class="input-group-btn">
                                <a href="{{ path('quantity_update', {'id': product.id, 'quantity':product.quantity}) }}" class="btn btn-default">Zmień</a>
                            </span>
                        </div>
                    </td>
                    <td><a href="{{ path('basket_remove', {'id': product.id}) }}" class="btn btn-primary">Usuń z koszyka</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('basket_buy') }}" class="btn btn-success pull-right">Kup wybrany towar</a>  
    <a href="{{ path('basket_clear') }}" class="btn btn-danger pull-right">Wyczyśc Koszyk</a>

{% endblock %}