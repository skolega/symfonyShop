{% extends "::base.html.twig" %}

{% block title %}AppBundle:Basket:index{% endblock %}

{% block body %}
    <h1>Koszyk</h1>
    {% if basket.products %}
        <a href="{{ path('basket_clear') }}" class="btn btn-danger pull-right">Wyczyśc Koszyk</a>
        <a href="{{ path('basket_buy') }}" class="btn btn-success pull-right">Kup wybrany towar</a> 
    {% endif %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>nazwa</th>
                <th>cena</th>
                <th>ilość</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for product in basket.products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>
                        <a href="{{ path('product', {'id': product.id}) }}">{{ product.name }}</a></td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.quantity }}</td>
                    <td><a href="{{ path('basket_remove', {'id': product.id}) }}" class="btn btn-primary">Usuń</a></td>
                </tr>

            {% else %}
                <tr>
                    <td colspan="5"> Koszyk jest pusty </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% set sum = 0 %}    
    {% set loopOutput %}               
        {% for product in basket.products %}            
            {% set sum = sum + product.price %}        
        {% endfor %}    
    {% endset %}
    <table class="table table-striped">
<thead>
            <tr>
                <th></th>
                <th></th>
                <th>cena</th>
                <th>ilość</th>
                <th></th>
            </tr>
        </thead>
        <tbody> 
            <tr>
                <td>SUMA</td>
                <td></td>
                <td>{{ sum }} zł</td>
                <td>{{ basket.products|length }}</td>
                <td></td>
            </tr>
        </tbody>
    </table>


    {{ loopOutput }}



{% endblock %}


