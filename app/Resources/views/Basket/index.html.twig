{% extends "::base.html.twig" %}

{% block title %}AppBundle:Basket:index{% endblock %}

{% block body %}
    <h1>Koszyk</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>nazwa</th>
                <th>cena</th>
                <th>ilość</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for product in basket.products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>
                        <a href="{{ path('product', {'id': product.id}) }}">{{ product.name }}</a></td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.quantity }}</td>
                    <td><a href="{{ path('basket_remove', {'id': product.id}) }}" class="btn btn-primary">Usuń</a></td>
                </tr>                         
            {% else %}
                <tr>
                    <td colspan="5"> Koszyk jest pusty </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <td></td>
            <td>PODSUMOWANIE</td>
            <td>{{ basket.price|number_format(2, ',', '') }}</td>
            <td>{{ basket.quantity }}</td>
            <td></td>
        </tfoot>
</table>
{% if basket.products %}
    <a href="{{ path('basket_clear') }}" class="btn btn-danger pull-right">Wyczyśc Koszyk</a>
    <a href="{{ path('basket_order') }}" class="btn btn-success pull-right">Złóż Zamówienie</a> 
{% endif %}
{% endblock %}


